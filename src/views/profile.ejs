<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de registro' }) %>

    <body>
        <!-- Header -->
        <%- include('partials/headerNavbar') %>
            <!-- /Header -->

            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Perfil de usuario </h2>
                    </div>
                </div>
                <div class="col-12">
                    <form action="" method="POST" >
                        <div class="row product-detail">
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="firstName">Nombre:</label>
                                <input class="form-input" type="text" id="nombre" name="firstName" value="<%= user.firstName : null %>">
                                
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="lastName">Apellido:</label>
                                <input class="form-input" type="text" id="apellido" name="lastName" value="<%= user.lastName : null %>">
                                

                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="email">Email:</label>
                                <input class="form-input" type="email" id="email" name="email" value="<%= user.email : null %>">
                               

                            </div>
                            <div class="col-12">
                                <button class="buy-now-button" type="submit">Guardar</button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
            <!-- /todos los productos -->

            <!-- footer -->
            <%- include('partials/footer') %>
                <!-- /footer -->
    </body>

</html>